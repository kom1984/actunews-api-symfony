{% extends "base.html.twig" %}

{% block title %}{{ post.title }}{% endblock %}
{% block page_title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col">

                    <!-- Titre de l'article -->
                    <h1 class="display-4">{{ post.title }}</h1>

                    <hr class="border border-dark">

                    <!-- Information de l'article -->
                    <h4 class="text-muted d-flex justify-content-between align-items-center">
                        <p class="m-0"><small style="font-size: 1rem; margin-right: 1rem;">Publié le</small>
                            {{ post.createdAt|date('d/m/Y') }}
                        </p>
                        <p class="m-0"><small style="font-size: 1rem; margin-right: 1rem;">Catégorie </small>
                            {{ post.category.name }}
                        </p>
                        <p class="m-0"><small style="font-size: 1rem; margin-right: 1rem;">Rédigé par </small>
                            {{ post.user.fullName }}
                        </p>
                    </h4>

                    <hr class="border border-dark mb-5">

                    <!-- Illustration de l'article -->
                    <img class="img-fluid mb-5"
                         src="{{ post.image }}"
                         alt="{{ post.title }}">

                    <!-- Contenu de l'article' -->
                    <p>{{ post.content }}</p>

                </div> <!-- ./col -->
            </div> <!-- ./row -->
        </div> <!-- ./container -->
    </div> <!-- ./bg-light -->
{% endblock %}
